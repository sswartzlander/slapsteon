<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="slapsteon" type="Insteon.Library.Configuration.SlapsteonConfigurationSection, Insteon.Library"/>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <log4net debug="true">
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="C:\Insteon\Logs\InsteonLog.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="10MB" />
      <datePattern value=".yyyyMMdd" />
      <layout type="log4net.Layout.PatternLayout, log4net">
        <param name="ConversionPattern" value="%d - %level - %m%n" />
      </layout>
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="RollingLogFileAppender" />
    </root>
  </log4net>
  <slapsteon>
    <slapsteonDevices>
      <device address="197751" name="plm" isDimmable="false" isPLM="true" />
      <device address="192B83" name="frontDoorHigh" isDimmable="false" isPLM="false" />
      <device address="1BBF6E" name="breakfastDimmer" isDimmable="true" isPLM="false" />
      <device address="192A4D" name="kitchenMulti" isDimmable="false" isPLM="false" slaveDevices="kitchenMultiSolo"/>
      <device address="192B89" name="kitchenMultiSolo" isDimmable="false" isPLM="false" slaveDevices="kitchenMulti"/>
      <device address="192BD4" name="mbrMulti" isDimmable="false" isPLM="false" />
      <device address="1BB0B9" name="mbrDimmer" isDimmable="true" isPLM="false" />
      <device address="1BBECC" name="livingroomDimmer" isDimmable="true" isPLM="false" />
      <device address="1BBCC0" name="gameroomDimmer" isDimmable="false" isPLM="false" />
      <device address="17F323" name="coachLights" isDimmable="false" isPLM="false" />
    </slapsteonDevices>
  </slapsteon>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
  <appSettings>
    <add key="SerialPort" value="COM3"/>
    <add key="EnableMonitorMode" value="true"/>
  </appSettings>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior name="Default">
          <serviceMetadata httpGetEnabled="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <services>
      <service name="Insteon.Library.InsteonWebService" behaviorConfiguration="Default">
        <host>
          <baseAddresses>
            <add baseAddress="http://127.0.0.1/InsteonWebService" />
          </baseAddresses>
        </host>
        <endpoint address=""
            binding="webHttpBinding"
            contract="Insteon.Library.IInsteonWebService" />
      </service>
    </services>
  </system.serviceModel>

</configuration>
